<% form_tag 'play_game' do -%>
<div style="margin-left: 600px">
<% if @selected_user.id == @pic_user.id %>
<p class="correct">Correct</p><br/>
<% else %>
<p class="incorrect">
Incorrect
</p>
<p class="correct">The Correct answer is <%= @pic_user.name %></p><br/><br/>
<%= image_tag("#{@pic_user.avatar_file_name}",:width=>350,:height=>350) %><br/><br/><br/><br/>
<% end %>
<%= image_submit_tag("play_again.jpg", :align => "center", :id => "Play_Again") %>
<%= link_to "Exit",users_path %>

</div>
<% end -%>
